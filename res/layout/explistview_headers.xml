<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearlayoutheader"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/lightblue"
	android:descendantFocusability="blocksDescendants"    
    android:orientation="horizontal" >
    
<RelativeLayout android:id="@+id/explist_parent" 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
	android:descendantFocusability="blocksDescendants"    
    android:orientation="vertical" >

	<ImageView
    	android:id="@+id/group_expanded_image"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_alignParentLeft="true"
    	android:layout_centerVertical="true"
    	android:layout_marginLeft="10dp" />

    <Button
        android:id="@+id/buttonShowGipfel"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:drawableLeft="@drawable/ic_action_world"
        android:text="@string/none" />

    <TextView
        android:id="@+id/list_header_gebiet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonShowGipfel"
        android:layout_alignBottom="@+id/buttonShowGipfel"
        android:layout_toLeftOf="@+id/buttonShowGipfel"
        android:text="Geb+Nr."
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/list_header_gipfel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/list_header_gebiet"
        android:layout_alignBottom="@+id/list_header_gebiet"
        android:layout_alignParentLeft="true"
        android:paddingLeft="49dp"
        android:text="12 - Gipfel"
        android:textColor="@color/black" />
    
</RelativeLayout>
</LinearLayout>
